	document.write(PayLater.GetPaymentsWidget(<?php echo $this->getProductPrice() ?>, '<?php echo $this->getPayLaterType() ?>'));
	
	Event.observe(window, 'load', function() {
		$$('p.apr-link')[0].writeAttribute('id', 'display-handler');
