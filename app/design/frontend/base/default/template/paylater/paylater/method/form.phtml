<div id="payment_form_paylater">
    <?php if ($this->canShow()): ?>
        <script type="text/javascript">
            function uncheckPayLaterOption() {
                $('p_method_paylater').checked = '';
            }
            function removePayLaterOption() {
                $('p_method_paylater').remove();
            }
            function uncheckAndRemovePayLaterOption() {
                uncheckPayLaterOption();
                removePayLaterOption();
            }
        </script>
    <?php $this->getConfiguredWidget() ?>
    <?php if ($this->hasWidgetBeenConfigured()): ?>
        <script type="text/javascript">
            uncheckPayLaterOption();
            function bindWidgetDataToPayLaterOption () {
                $('p_method_paylater').setAttribute('class', 'pl-widget');
                $('p_method_paylater').setAttribute('data-pl-price', <?php echo $this->getAmount() ?>);
                $('p_method_paylater').setAttribute('data-pl-widget', '<?php echo $this->getWidgetName() ?>');
                <?php if ($this->doesWidgetHaveBreakdown()): ?>
                $('p_method_paylater').setAttribute('data-pl-showbreakdown', <?php echo $this->getWidgetShowBreakdown() ?>);
                <?php endif; ?>
                <?php if ($this->doesWidgetHaveParameters()): ?>
                $('p_method_paylater').setAttribute('data-pl-params', '<?php echo $this->getWidgetParamsAsString() ?>');
                <?php endif; ?>
                $('p_method_paylater').setAttribute('data-pl-legal', '<?php echo Mage::helper('paylater')->getRepresentativeLegal() ?>');
                PayLaterAnywhereWidget.refreshWidgets();
            }
            bindWidgetDataToPayLaterOption();
        </script>
    <?php else: ?>
    <?php echo $this->helper('paylater')->__('PayLater Checkout Widget has not been configured yet.') ?>
        <script type="text/javascript">
            uncheckAndRemovePayLaterOption();
        </script>
    <?php endif; ?>
    <?php elseif ($this->helper('paylater')->isPayLaterPaymentMethod() && $this->helper('paylater')->isAllowedCurrency()): ?>
        <script type="text/javascript">
            uncheckAndRemovePayLaterOption();
        </script>
        <strong
            class="paylater-unavailable"><?php echo $this->__($this->helper('paylater')->getPayLaterConfigServiceUnavailableHeading('payment')) ?></strong>
        <p><?php echo $this->__($this->helper('paylater')->getPayLaterConfigServiceUnavailableBody('payment')) ?></p>
    <?php endif; ?>
</div>