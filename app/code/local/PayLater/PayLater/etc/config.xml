<config>
	<modules>
		<PayLater_PayLater>
			<version>1.0.0</version>
		</PayLater_PayLater>
	</modules>
	<license>
		<url>http://opensource.org/licenses/osl-3.0.php  Open Software License (OSL 3.0)</url>
	</license>
	<support>
		<email>dev@gpmd.co.uk</email>
	</support>
	<report>
		<bugs>dev@gpmd.co.uk</bugs>
	</report>
	<dev>
		<email>dev@gpmd.co.uk</email>
	</dev>
	<static>
		<cdn>https://paylater.s3.amazonaws.com/</cdn>
	</static>
	<global>
		<helpers>
			<paylater>
				<class>PayLater_PayLater_Helper</class>
			</paylater>
		</helpers>
		<models>
			<paylater>
				<class>PayLater_PayLater_Model</class>
			</paylater>
		</models>
		<blocks>
			<paylater>
				<class>PayLater_PayLater_Block</class>
			</paylater>
		</blocks>
	</global>
	<adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<paylater>
											<title>PayLater</title>
											<sort_order>100</sort_order>
										</paylater>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<paylater>
					<file>paylater/paylater.xml</file>
				</paylater>
			</updates>
		</layout>
	</adminhtml>
	<default>
		<paylater>
			<globals>
				<run_status>0</run_status>
				<env>test</env>
			</globals>
			<dev>
				<log_file>paylater_paylater.log</log_file>
			</dev>
			<payment>
				<order_status>pending</order_status>
			</payment>
		</paylater>
	</default>
</config>